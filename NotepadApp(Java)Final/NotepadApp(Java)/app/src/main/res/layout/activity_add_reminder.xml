<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#888480"
    android:layout_height="match_parent"
    tools:context=".Fragments.AddReminderActivity"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:textSize="25dp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:text="Add new Reminder"/>

                <EditText
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:hint="Add name here"
                    android:padding="10dp"
                    android:background="@drawable/rounededittext"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/rounededittext"
                    android:hint="Add description here"
                    android:padding="10dp"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/day"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:hint="Add Day here"
                    android:background="@drawable/rounededittext"
                    android:padding="10dp"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/date_time"
                    android:layout_width="match_parent"
                    android:hint="Add Date and Time"
                    android:layout_marginTop="10dp"
                    android:padding="10dp"
                    android:background="@drawable/rounededittext"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/add_timetable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/buttonselctor"
                    android:textColor="@color/white"
                    android:text="Add Reminder" />
            </LinearLayout>
        </ScrollView>



    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>